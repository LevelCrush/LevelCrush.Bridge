# Dynasty Trader Environment Configuration
# Copy this file to .env.dynasty and update with your values

# PostgreSQL with TimescaleDB connection
DATABASE_URL=postgresql://dynasty_user:your_password@localhost:5432/dynasty_trader

# Server configuration
HOST=127.0.0.1
PORT=3113

# JWT secret for authentication (generate with: openssl rand -base64 32)
JWT_SECRET=your-secret-key-here

# Background task intervals (in seconds)
AGING_TICK_INTERVAL=3600       # How often characters age (default: 1 hour)
DEATH_CHECK_INTERVAL=1800      # How often to check for natural deaths (default: 30 min)
MARKET_EXPIRY_INTERVAL=300     # How often to process expired listings (default: 5 min)
PRICE_SNAPSHOT_INTERVAL=300    # How often to snapshot market prices (default: 5 min)

# Optional: Discord OAuth2 (for future Discord bot integration)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_REDIRECT_URI=http://localhost:3113/api/v2/auth/discord/callback

# Optional: Redis for session management (future)
REDIS_URL=redis://localhost:6379

# Development settings
RUST_LOG=info,bridge=debug,dynasty_trader=debug
RUST_BACKTRACE=1